<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mprog.nl.studentenschoonmaakapp.InviteActivity">

    <TextView
        android:text="@string/bijnaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bijnaam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/field_invite_name"
        android:hint="Bijnaam"
        android:layout_below="@+id/bijnaam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="E-mailadres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_invite_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/field_invite_name"
        android:layout_alignEnd="@+id/field_invite_name"
        android:id="@+id/field_invite_email"
        android:hint="@string/e_mailadres" />

    <TextView
        android:text="Als je een e-mail adres toevoegt, wordt er een uitnodiginsmail verstuurd aan de deelnemer."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_invite_email"
        android:layout_marginTop="14dp"
        android:id="@+id/invite_explanation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Voeg deelnemer toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_invite_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored" />
</RelativeLayout>
