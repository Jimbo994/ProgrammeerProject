<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mprog.nl.studentenschoonmaakapp.LogIn.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:hint="@string/e_mail"
        android:id="@+id/field_register_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/voornaam"
        android:ems="10"
        android:layout_below="@+id/field_register_email"
        android:layout_alignRight="@+id/field_register_email"
        android:layout_alignEnd="@+id/field_register_email"
        android:layout_marginTop="18dp"
        android:id="@+id/field_register_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/achternaam"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/field_register_lastname"
        android:layout_below="@+id/field_register_name"
        android:layout_alignLeft="@+id/field_register_name"
        android:layout_alignStart="@+id/field_register_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/wachtwoord"
        android:layout_below="@+id/field_register_lastname"
        android:layout_alignLeft="@+id/field_register_lastname"
        android:layout_alignStart="@+id/field_register_lastname"
        android:layout_marginTop="65dp"
        android:id="@+id/field_register_password" />

    <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:inputType="textPassword"-->
        <!--android:ems="10"-->
        <!--android:hint="@string/herhaal_wachtwoord"-->
        <!--android:layout_below="@+id/field_register_password"-->
        <!--android:layout_alignRight="@+id/field_register_password"-->
        <!--android:layout_alignEnd="@+id/field_register_password"-->
        <!--android:layout_marginTop="17dp"-->
        <!--android:id="@+id/field_register_passwordconfirm" />-->

    <Button
        android:text="@string/maak_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/register_button"
        android:layout_below="@+id/field_register_password"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
