<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mprog.nl.studentenschoonmaakapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogIn.LoginActivity"
            android:label="Inloggen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogIn.RegisterActivity"
            android:label="Registeren"/>
        <activity android:name=".LogIn.PasswordRecoveryActivity"
            android:label="Herstel mijn wachtwoord"/>
        <activity
            android:name=".MyGroupsActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RoomActivity"
            android:label="@string/title_activity_group_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MakeGroupActivity"
            android:label="@string/title_activity_make_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyAccountActivity"
            android:label="Mijn Account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TaskActivity"
            android:label="@string/title_activity_group_detail"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".EditMyAccountActivity"
            android:label="Wijzig persoonlijke gegevens"/>
    </application>

</manifest>